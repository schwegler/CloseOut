<div class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>All Site Reviews</h1>
    <p class="lead">Select a review for more information.</p>
  </div>
</div>
<div class="container">
  <div class="page-header"><h1>Reviews Table</h1></div>

<table class="pretty table table-striped">
  <tr>
    <th>Site</th>
    <th>Reviewed By</th>
    <th>Date Reviewed</th>
    <th>Accepted</th>
    <th>Date Accepted</th>
    <th></th>
    <th></th>
  </tr>

<% @site_reviews.each do |site_review| %>
  <tr>
    <td><%= link_to site_review.site.name, site_review.site %></td>
    <td><%= site_review.reviewedby %></td>
    <td><%= site_review.datereviewed %></td>
    <td><%= site_review.acctepted %></td>
    <td><%= site_review.dateaccepted %></td>
    <td><%= link_to 'Edit', edit_site_review_path(site_review) %></td>
    <td><%= link_to 'Destroy', site_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

