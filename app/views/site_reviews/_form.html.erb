<%= semantic_form_for @site_review do |f| %>
  <%= f.inputs do %>
    <%= f.input :site_id, :as => :select, :collection => Site.all, :label_method => :format_name, :value_method => :id %>
    <%= f.input :installstart, :label => "Install Start Date" %>
    <%= f.input :installcomplete, :label => "Install Complete Date" %>
    <%= f.input :turnup, :label => "Turn-Up Date" %>
    <%= f.input :elecinsp, :label => "Electrical Inspection Date" %>
    <%= f.input :reviewedby, :label => "Reviewed By" %>
    <%= f.input :datereviewed, :label => "Reviewed" %>
    <%= f.input :acctepted %>
    <%= f.input :dateaccepted, :label => "Date Accepted"%>
    <%= f.input :reasonrejected, :label => "Reason Rejected" %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
    <%= f.action :cancel %>
  <% end %>
<% end %>
