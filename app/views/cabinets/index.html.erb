<div class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>All Cabinets</h1>
  </div>
</div>
<div class="container">
  <div class="page-header"><h1>Cabinets Table</h1></div>
<p id="notice"><%= notice %></p>

<table class="pretty table table-striped">
  <tr>
    <th>Cabinet Name</th>
    <th>Site</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cabinets.each do |cabinet| %>
  <tr>
    <td><%= link_to cabinet.name, cabinet %></td>
    <td><%= link_to cabinet.site.name, cabinet.site %></td>
    <td><%= link_to 'Show', cabinet %></td>
    <td><%= link_to 'Edit', edit_cabinet_path(cabinet) %></td>
    <td><%= link_to 'Destroy', cabinet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

