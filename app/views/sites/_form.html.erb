<%= semantic_nested_form_for @site, :html=>{:class => "form-vertical", :multipart => true } do |f| %>

	<%= f.inputs do %>
		<%= f.input :name %>
    	<%= f.input :number %>
    	<%= f.input :location %>
    	<%= f.input :type %>
    	<%= f.input :county %>
		<%= f.input :tech_id, :as => :select, :collection => Tech.all, :label_method => :format_name, :value_method => :id %>
		<i class="icon-camera"></i> <%= f.link_to_add "Add attachment", :clips %>
	<% end %>

	<%= f.inputs :for => :clips do |clip_form|  %>
        <%= image_tag(clip_form.object.file.url) if clip_form.object.file? %>
    	<%= clip_form.input :description %>
    	<%= clip_form.input :file %>
    	<%= clip_form.link_to_remove "Remove this attachment" %>
	<% end %>
	
	<%= f.actions do %>
    	<%= f.action :submit, :as => :input %>
	<% end %>
	
<% end %>