<div class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>All Towers</h1>
    <p class="lead">Select a tower for more information.</p>
  </div>
</div>
<div class="container">
<div class="page-header"><h1>Towers Table</h1></div>
<table class="pretty table table-striped">
  <tr>
    <th>Name</th>
    <th>Site</th>
    <th></th>
  </tr>

<% @towers.each do |tower| %>
  <tr>
    <td><%= link_to tower.name, tower %></td>
    <td><%= link_to tower.site.name, tower.site %></td>
    <td><%= link_to 'Edit', edit_tower_path(tower) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tower', new_tower_path %>
