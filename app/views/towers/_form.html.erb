<%= semantic_form_for @tower do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :numbeant %>
    <%= f.input :numbnewant %>
    <%= f.input :oldcables %>
    <%= f.input :newcables %>
    <%= f.input :site_id, :as => :select, :collection => Site.all, :label_method => :format_name, :value_method => :id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
