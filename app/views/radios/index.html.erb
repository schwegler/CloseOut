<div class="container">
<h1>Listing radios</h1>

<table class="pretty table table-striped">
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Tower</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @radios.each do |radio| %>
  <tr>
    <td><%= radio.name %></td>
    <td><%= radio.desc %></td>
    <td><%= radio.tower_id %></td>
    <td><%= link_to 'Show', radio %></td>
    <td><%= link_to 'Edit', edit_radio_path(radio) %></td>
    <td><%= link_to 'Destroy', radio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

