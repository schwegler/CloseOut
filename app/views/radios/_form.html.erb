<%= semantic_form_for @radio do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :tower_id, :as => :select, :collection => Tower.all, :label_method => :format_name, :value_method => :id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
